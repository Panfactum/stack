{
    "eslint.workingDirectories": [
        "./packages/website",
        "./packages/cli"
    ],
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },
    "[tsx]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },
    "[astro]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "eslint.format.enable": true,
    "eslint.codeActionsOnSave.rules": null,
    "files.associations": {
        "packages/website/**/*.css": "tailwindcss"
    },
    "files.exclude": {
        "**/.git": false
    }
}