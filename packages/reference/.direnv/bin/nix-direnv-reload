#!/usr/bin/env bash
set -e
if [[ ! -d "/home/uptown/Projects/panfactum/stack/packages/reference" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/uptown/Projects/panfactum/stack/packages/reference")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/uptown/Projects/panfactum/stack/packages/reference" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/uptown/Projects/panfactum/stack/packages/reference/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/uptown/Projects/panfactum/stack/packages/reference/.envrc" "/home/uptown/Projects/panfactum/stack/packages/reference/.direnv"/*.rc
