---
export type Type = "direct" | "submodule" | "utility";

interface Props {
  type: Type;
}

const { type } = Astro.props;
const color =
  type === "direct"
    ? "bg-brand-500 !text-white"
    : "bg-gray-500 !text-white";

const text =
  type === "direct" ? "Direct" : type === "submodule" ? "Submodule" : "Utility";

// const explainer =
//   type === "direct"
//     ? "Direct modules are meant to be deployed directly using terragrunt"
//     : type === "submodule"
//       ? "Submodules are meant to be used in your Tofu (Terraform) modules"
//       : "Do not use utility modules";
---

<div
  class:list={[
    `
      h-fit w-fit rounded-lg px-4 py-1 text-sm font-medium tracking-wide whitespace-nowrap
      sm:text-base
    `,
    color,
  ]}
>
  {text}
</div>
