---
import StatusChip, { type Status } from "./StatusChip.astro";
import TypeChip, { type Type } from "./TypeChip.astro";
import { replaceVersionPlaceholders } from "../../lib/versions";
import { GithubIcon } from "../icons/GithubIcon.tsx";

interface Props {
  status: Status;
  sourceHref: string;
  type: Type;
  name: string;
}

const { status, sourceHref, type, name } = Astro.props;
const href = replaceVersionPlaceholders(sourceHref);
---

<div
  class="mt-1 mb-3 flex flex-wrap gap-x-5 gap-y-2 border-b-2 border-solid border-secondary py-1"
>
  <div class="flex items-center gap-3">
    <code
      data-reference={name}
      class={`
        inline-block w-fit !text-sm font-medium
        sm:!text-base
      `}
    >
      {name}
    </code>
  </div>

  <div class="flex items-center gap-3">
    <StatusChip status={status} />
    <TypeChip type={type} />
    <a href={href} class="cursor-pointer">
      <GithubIcon size={35} />
    </a>
  </div>
</div>
