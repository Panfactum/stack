---
import { DISCORD_URL } from "../../lib/constants";
import { replaceVersionPlaceholders } from "../../lib/versions";

interface Props {
  href: string;
}

const {href, ...rest} = Astro.props;

const fixedHref = replaceVersionPlaceholders(href).replaceAll(
  "__discordServerLink__",
  DISCORD_URL,
);


---

<a {...rest} href={fixedHref}><slot /></a>
