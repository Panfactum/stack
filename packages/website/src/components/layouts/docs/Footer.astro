---
import { DiscordIcon } from "@/components/icons/DiscordIcon.tsx";
import { GithubIcon } from "@/components/icons/GithubIcon.tsx";
import { PanfactumLogoIcon } from "@/components/icons/PanfactumLogoIcon.tsx";
import { COPYWRITE, DISCORD_URL, GITHUB_URL } from "@/lib/constants";

---

<footer
  class={`
    mx-auto flex max-w-screen-2xl flex-col gap-8 overflow-hidden bg-gray-dark-mode-950 px-8 pt-12
    text-gray-dark-mode-50
  `}
>
    <hr class={`
      h-px border-0 bg-gray-light-mode-400 shadow-gray-dark-mode-300 blur-xs
      dark:bg-gray-dark-mode-700
    `}/>
    <div class={`
      flex flex-col items-center justify-between gap-8
      md:flex-row
    `}>
        <div class={`
          flex flex-col justify-between gap-8 self-start py-4
          md:h-72
          lg:h-96
        `}>
            <div class="flex flex-col gap-2 text-tertiary">
                <PanfactumLogoIcon size={250} />
                <p>
                    The Open-Source Framework for Cloud Infrastructure
                </p>
                <div class="flex items-center gap-x-6">
                    <a aria-label="Github Repository" href={GITHUB_URL}>
                        <GithubIcon size={36} />
                    </a>
                    <a aria-label="Discord Server" href={DISCORD_URL}>
                        <DiscordIcon size="48" />
                    </a>
                </div>
            </div>

            <p>{COPYWRITE}</p>
        </div>
