---

import { PRIMARY_NAV_LINKS } from "./links.tsx";
import CommonLayout from "../common/CommonLayout.astro";
import Header from "../common/Header.astro";
import { NavItemWithPopup } from "../common/NavItemWithPopup";
import { SolutionsNavItem } from "../common/SolutionsNavItem";
import type { SecondTierConfig } from "../common/types";

interface Props {
  title: string;
  description: string;
  secondTierConfig?: SecondTierConfig;
}

const {
  title,
  description,
  secondTierConfig,
} = Astro.props;
---
<CommonLayout
  title={title}
  description={description}
>
    <Header
      hasBorder={true}
      isFixed={true}
      collapseLogoOnMobile={false}
      links={PRIMARY_NAV_LINKS}
      secondTierConfig={secondTierConfig}
    >
      <Fragment slot="nav">
          <SolutionsNavItem client:idle />
          <NavItemWithPopup
          title="Pricing"
          action="/pricing"
          saveEnabled={true}
          client:idle
          />
          <NavItemWithPopup
          title="Docs"
          action="/docs/edge/guides"
          saveEnabled={true}
          client:idle
          />
          <!-- <NavItemWithPopup
          title="Blog"
          action="/blog"
          saveEnabled={true}
          client:idle
          />
          <NavItemWithPopup
          title="About"
          action="/about"
          saveEnabled={true}
          client:idle
          /> -->
      </Fragment>
    </Header>
    <slot />
</CommonLayout>