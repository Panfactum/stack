---
import Details from "./_components/Details.astro";
import FAQS from "./_components/FAQs/FAQs";
import HeroSection from "./_components/HeroSection.astro"
import Pitch from "./_components/Pitch.astro";
import Layout from "../../layouts/Layout.astro";
import MainSection from "../../layouts/MainSection.astro";
import WhoWouldBenefit from "./_components/WhoWouldBenefit.astro";
