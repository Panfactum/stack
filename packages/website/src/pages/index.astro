---
import "../styles/global.css";

import ComparisonSection from "./_components/ComparisonSection.astro";
import FAQS from "./_components/FAQs/FAQs";
import FrameworkFeaturesSection from "./_components/FrameworkFeaturesSection/FrameworkFeaturesSection.astro";
import FrameworkSummarySection from "./_components/FrameworkSummarySection.astro";
import HeroSection from "./_components/HeroSection.astro";
import PricingSection from "./_components/PricingSection/PricingSection.astro";
import ReplacedServicesSection from "./_components/ReplacedServicesSection/ReplacedServicesSection.astro";
import SupportPlanFeatureSection from "./_components/SupportPlanFeatureSection/SupportPlanFeatureSection.astro";
import Layout from "../layouts/Layout.astro";
import MainSection from "../layouts/MainSection.astro";
import SubSection from "../layouts/SubSection.astro";
---

<Layout
  heroClass="bg-secondary bg-hero-pattern bg-[center_top] bg-cover bg-no-repeat"
  hasBorder={false}
  title="Panfactum"
  description="The Open-Source Framework for Cloud Infrastructure"
>
  <HeroSection slot="hero"/>
  <MainSection title="The Panfactum Framework">
    <div slot="chip" class="mb-6 rounded-lg bg-brand-100 px-2 py-1 text-sm font-semibold text-brand-800 ring-2 ring-brand-800">Free, Open-Source</div>
    <FrameworkSummarySection />
    <FrameworkFeaturesSection />
      <div class="hidden sm:block">
          <ReplacedServicesSection />
      </div>

  </MainSection>

  <MainSection
    background="secondary"
    title="Hire the Panfactum Experts"
    subtitle="You focus on shipping software. We handle your cloud infrastructure."
    id="support"
  >
    <div slot="chip" class="mb-6 rounded-lg bg-success-200 px-2 py-1 text-sm font-semibold text-success-800 ring-2 ring-success-800">Fractional Cloud Engineers</div>
    <SupportPlanFeatureSection />
    <PricingSection />
    <ComparisonSection />
    <SubSection title="Frequently Asked Questions">
        <FAQS client:idle/>
    </SubSection>
  </MainSection>
</Layout>
