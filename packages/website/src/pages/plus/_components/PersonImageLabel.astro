---
import { BadgeCheckIcon } from './BadgeCheckIcon';

interface Props {
  title: string;
  small?: boolean;
  subtitle: string;
}

const { title, small = false, subtitle } = Astro.props;
---

<div class:list={[
  "relative z-10 flex w-full justify-center",
  small ? "-mt-4" : "-mt-8"
]}>
  <div class="rounded-full border border-gray-dark-mode-300 bg-[#ffffff]">
    <div class:list={[
      "flex flex-col text-center font-inter",
      small ? "px-4 py-1" : "px-9 py-3"
    ]}>
      <div class="flex items-center justify-center">
        <span class:list={[
          "font-bold text-gray-light-mode-900",
          small ? "text-xs" : ""
        ]}>
          {title}
        </span>
        <BadgeCheckIcon client:load small={small} />
      </div>
      {subtitle && (
        <span class:list={[
          "font-medium text-gray-light-mode-600",
          small ? "text-[10px]" : ""
        ]}>
          {subtitle}
        </span>
      )}
    </div>
  </div>
</div> 