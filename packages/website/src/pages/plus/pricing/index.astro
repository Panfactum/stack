---
import HeroSection from "./_components/HeroSection.astro";
import TimelineSection from "./_components/TimelineSection.astro";
import Layout from "../../../layouts/Layout.astro";
import PricingSection from "../../_components/PricingSection/PricingSection.astro";
---

<Layout
  heroClass="bg-secondary"
  hasBorder={false}
  title="PanfactumPlus Pricing"
  description="The Power of Panfactum Plus Fractional DevOps"
>
  <HeroSection slot="hero" />

  <section class:list={["overflow-x-hidden", "bg-primary"]}>
    <div
      class="mx-auto flex max-w-screen-xl flex-col items-center px-4 pb-8 pt-12 md:px-8"
    >
      <PricingSection />
    </div>
    <TimelineSection />
  </section>
</Layout>
