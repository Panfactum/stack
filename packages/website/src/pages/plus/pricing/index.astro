---
import Layout from "@/layouts/Layout.astro";

import FAQS from "./_components/FAQs.tsx";
import HeroSection from "./_components/HeroSection.astro";
import PriceCalculator from "./_components/PricingSection/PriceCalculator.tsx";
import TimelineSection from "./_components/TimelineSection.astro";
---

<Layout
  heroClass="bg-gray-light-mode-950 dark:bg-gray-dark-mode-800 text-white"
  hasBorder={false}
  title="PanfactumPlus Pricing"
  description="The Power of Panfactum Plus Fractional DevOps"
>
  <HeroSection slot="hero" />

  <section class:list={["overflow-x-hidden", "bg-gray-light-mode-950 dark:bg-gray-dark-mode-800"]}>
    <PriceCalculator client:load />
    <TimelineSection />
    <FAQS client:idle/>
  </section>
</Layout>
