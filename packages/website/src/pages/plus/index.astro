---

import ApproachSection from "./_components/ApproachSection.astro";
import ComparisonSection from "./_components/ComparisonSection.astro";
import FAQS from "./_components/FAQs.tsx";
import HeroSection from "./_components/HeroSection.astro";
import HowSection from "./_components/HowSection/HowSection.astro";
import PlansSection from "./_components/PlansSection.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout
  heroClass="bg-secondary"
  hasBorder={false}
  title="PanfactumPlus"
  description="The Power of Panfactum Plus Fractional DevOps"
>
  <HeroSection slot="hero"/>
  <ApproachSection/>
  <HowSection/>
  <PlansSection/>
  <ComparisonSection/>

  <section class="flex flex-col items-center space-y-16 bg-white py-24 dark:bg-gray-dark-mode-950">
    <div class="container flex max-w-screen-lg flex-col items-center gap-4">
        <div class="mb-16 flex flex-col items-center gap-5 text-center">
            <h1 class="text-display-xl font-machina font-medium leading-none">
                Frequently Asked Questions
            </h1>
            <p class="text-display-sm pt-0">
                Everything you need to know about the product and billing.
            </p>
        </div>
        <FAQS client:idle/>
    </div>
  </section>
  
</Layout>
