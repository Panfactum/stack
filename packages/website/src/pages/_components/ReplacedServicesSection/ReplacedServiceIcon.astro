---
import {type ImageMetadata} from "astro";
import {Picture} from "astro:assets";
import { clsx } from "clsx";

interface Props {
  src: ImageMetadata;
  name: string;
  key: string;
}

const { src, name, key } = Astro.props;
const className = `move-icon-id-${name.replace(/\s+/g, "-").toLowerCase()}`
---

<div
  title={name}
  id={key}
  class:list={clsx(
    "move-icon border-secondary overflow-visible rounded-md border bg-gray-light-mode-300 dark:bg-offWhite",
    className
  )}
>
  <Picture
          src={src}
          alt={name}
          class="rounded-[3px]"
          width={64}
          sizes="4rem"
          breakpoints={[64]}
          formats={["avif", "webp"]}
  />
</div>
