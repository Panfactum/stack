---
import DiscordIcon from "@/components/icons/discord.svg";
import PanfactumMark from "@/components/icons/panfactum-mark.svg";

import Button from "../../components/ui/Button.astro";
import GetStartedButton from "../../components/ui/GetStartedButton.tsx";
import {DISCORD_URL, SIGNUP_LINK} from "../../lib/constants";

const pathname = new URL(Astro.request.url).pathname;
---

<section class="relative flex flex-col items-center py-8 lg:py-16">
  <div class="grid-background" />
  <style>

  </style>
  <div class="z-10 xl:px-8">
    <div class="flex flex-col items-center gap-8 xl:px-8">
      <div
        class="flex flex-col items-center gap-6 text-center"
      >
          <h1 class="text-display-lg lg:text-display-xl font-machina font-bold !leading-normal tracking-wider">The Open-Source Framework for<br/>Cloud 
            <span class="md:hidden">Infra</span>
            <span class="hidden md:inline">Infrastructure</span>

          </h1>
        <p class="text-display-sm max-w-[600px]">
          Launch <span class="font-bold">faster</span>. Scale <span class="font-bold">easier</span>. Save <span class="font-bold">75%</span>.
        </p>
      </div>

      <div class="flex flex-wrap justify-center gap-3">
          <a href={SIGNUP_LINK} class="flex w-full justify-center sm:w-fit">
              <Button variant="secondary" class="flex w-3/4 items-center justify-center gap-2 sm:w-fit">
                  <PanfactumMark size="24" class="h-5" />
                  Live Demo
              </Button>
          </a>
        <a href={DISCORD_URL} class="flex w-full justify-center sm:w-fit">
          <Button variant="secondary" class="flex w-3/4 items-center justify-center gap-2 sm:w-fit">
            <DiscordIcon size="24" class="h-5" />
            Discord
          </Button>
        </a>
        <GetStartedButton fullPath={pathname} class="w-3/4 sm:w-fit"/>
      </div>
    </div>
  </div>
</section>
