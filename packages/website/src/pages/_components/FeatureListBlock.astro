---
interface Props {
  title?: string;
  content: string;
  background?: "light" | "dark";
}

const { title, content, background = "dark" } = Astro.props;
---

<div class="flex items-center gap-x-8 gap-y-2 sm:max-w-96 sm:flex-col sm:text-center">
  <div
    class:list={[
      "border-primary flex size-16 sm:size-12 items-center justify-center rounded-md border p-5 sm:p-3 shadow mb-2",
      background === "dark" ? "bg-accent-dark dark:bg-secondary" : "bg-primary"
    ]}
  >
    <slot />
  </div>
  <div class="flex flex-col gap-2">
    {title && (<h4 class="text-lg font-semibold">{title}</h4>)}
    <p class="text-tertiary max-w-96 md:text-balance">{content}</p>
  </div>

</div>
