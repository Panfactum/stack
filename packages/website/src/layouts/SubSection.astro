---
import SubSectionKicker from "./SubSectionKicker.astro";
import SubSectionTitle from "./SubSectionTitle.astro";
interface Props {
  class?: string;
  kicker?: string;
  title?: string;
  id?: string;
}
const { kicker, title, class: className, id } = Astro.props;
---

<section
  id={id ?? title?.replaceAll(" ", "-").toLowerCase()}
  class:list={[
    "flex flex-col items-center justify-center pt-8 w-full",
    className,
  ]}
>
  <hr class="mx-auto my-8 w-[90vw] max-w-screen-xl border-t-2 border-gray-light-mode-500/20 dark:border-gray-dark-mode-800" />
  <div class="flex flex-col items-center justify-center gap-2 pb-8">
    {kicker && <SubSectionKicker>{kicker}</SubSectionKicker>}
    {title && <SubSectionTitle>{title}</SubSectionTitle>}
  </div>

  <slot />
</section>
