---
import MainSectionSubtitle from "./MainSectionSubtitle.astro";
import MainSectionTitle from "./MainSectionTitle.astro";

interface Props {
  background?: "primary" | "secondary";
  title?: string;
  subtitle?: string;
  id?: string;
}
const { background = "primary", title, subtitle, id } = Astro.props;
---

<section
  class:list={[
    "overflow-x-hidden",
    background === "primary" ? "bg-primary" : "bg-secondary",
  ]}
>
  <div
    class="container mx-auto flex max-w-screen-xl flex-col items-center px-4 py-16 md:px-8"
    id={id ?? title?.replaceAll(" ", "-").toLowerCase()}
  >
    <div class="mb-8">
      {title && <MainSectionTitle title={title} background={background} />}
      {subtitle && <MainSectionSubtitle subtitle={subtitle} />}
    </div>

    <slot />
  </div>
</section>
