---
import Layout from "@/layouts/Layout.astro";

import FAQS from "./_components/FAQs/FAQs";
import HeroSection from "./_components/HeroSection.astro";
import MoreQuestions from "./_components/MoreQuestions/MoreQuestions.astro";
import PriceCalculator from "./_components/PriceCalculator/PriceCalculator";
import SavingsCalculator from "./_components/SavingsCalculator/SavingsCalculator";
import MainSection from "../../layouts/MainSection.astro";
---

<Layout
  title="Pricing"
  description="Support plan pricing"
  heroClass="bg-secondary"
  hasBorder={false}
>
  <HeroSection slot="hero"/>
  <MainSection title="Pricing">
    <PriceCalculator background="primary" client:load />
  </MainSection>
  <MainSection title="Estimated Savings" background="secondary">
    <SavingsCalculator background="secondary" client:load />
  </MainSection>

  <MainSection title="Frequently Asked Questions">
    <FAQS client:idle/>
      <MoreQuestions/>
  </MainSection>
</Layout>
