      <div class="flex max-w-[846px] flex-col items-center gap-5 text-center">
        <h1 class="text-display-lg font-machina font-medium leading-none">
          Support Plans
        </h1>
        <p class="text-display-sm pt-0">
          Simple, transparent pricing that is guaranteed to save you money.
        </p>
      </div>
    </div>
  </section>
  <MainSection title="Pricing">
    <PriceCalculator background="primary" client:load />
  </MainSection>
  <MainSection title="Estimated Savings" background="secondary">
    <SavingsCalculator background="secondary" client:load />
