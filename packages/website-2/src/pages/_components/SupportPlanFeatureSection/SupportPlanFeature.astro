---
import CheckIcon from "@/components/icons/check-circle.svg";

interface Props {
  description: string;
}

const { description } = Astro.props;
---

<div class="flex items-center gap-x-3">
  <div class="text-brand-500">
    <CheckIcon size="30" />
  </div>
  <span class="text-display-xs">{description}</span>
</div>
