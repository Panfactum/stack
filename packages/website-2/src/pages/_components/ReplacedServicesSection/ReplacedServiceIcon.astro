---
import { clsx } from "clsx";

interface Props {
  src: string;
  name: string;
  key: string;
}

const { src, name, key } = Astro.props;
---

<div
  title={name}
  id={key}
  class:list={clsx(
    "move-icon border-secondary overflow-visible rounded-md border bg-offWhite",
    `move-icon-id-${name.replace(/\s+/g, "-").toLowerCase()}`,
  )}
>
  <img src={src} alt={name} class="rounded-[3px]" />
</div>
