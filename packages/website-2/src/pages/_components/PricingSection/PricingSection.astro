---
import PriceItem from "./PriceItem.astro";
import SubSection from "../../../layouts/SubSection.astro";
import {
  ANNUAL_SPEND_DISCOUNT_MULTIPLIER,
  CLUSTER_COST,
  WORKLOAD_DEPLOYMENT_COST
} from "../../support/_components/priceConstants";
---

<SubSection title="Simple, Usage-based Pricing">
  <div class="flex w-full flex-col gap-8">
    <PriceItem
      title="The Panfactum Framework"
      description="Our full infrastructure framework is completely free and open source. No support plan needed."
      price={0}
    />
    <PriceItem
      title="Support: Panfactum Kubernetes Cluster"
      description="We perform end-to-end lifecycle management of a production-ready Kubernetes cluster with all Panfactum addons installed."
      price={CLUSTER_COST + (CLUSTER_COST * ANNUAL_SPEND_DISCOUNT_MULTIPLIER)}
      period="/ month"
    />
    <PriceItem
      title="Support: Workload Deployment"
      description="We configure, harden, and deploy one of your workloads to a Panfactum Kubernetes cluster."
      price={WORKLOAD_DEPLOYMENT_COST + (WORKLOAD_DEPLOYMENT_COST * ANNUAL_SPEND_DISCOUNT_MULTIPLIER)}
      period="/ month"
    />
      <p class="self-center text-xs"><sup>*</sup>Displayed prices include annual plan discounts</p>
  </div>
</SubSection>
