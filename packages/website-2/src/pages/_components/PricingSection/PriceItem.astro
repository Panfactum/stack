---
interface Props {
  title: string;
  description: string;
  price: number;
  period?: string;
}
const { title, description, price, period } = Astro.props;

const moneyFormatter = new Intl.NumberFormat("en-US", {
  style: "currency",
  currency: "USD",
  maximumFractionDigits: 0
});

const priceText = price === 0 ? "Free" : moneyFormatter.format(price);
---

<div
  class="border-secondary bg-primary flex w-full flex-wrap justify-between gap-y-8 rounded-md border px-6 pb-6 pt-8 shadow-md"
>
  <div class="max-w-full sm:max-w-128 xl:max-w-224">
    <h4 class="text-display-md font-machina font-medium">
      {title}
    </h4>
    <p class="text-tertiary">
      {description}
    </p>
  </div>

  <div
    class="flex min-w-36 items-center gap-2 font-machina font-semibold leading-none"
  >
    <span class="text-display-md">
      {priceText}
    </span>
    <span class="text-tertiary font-medium">
      {period}
    </span>
  </div>
</div>
