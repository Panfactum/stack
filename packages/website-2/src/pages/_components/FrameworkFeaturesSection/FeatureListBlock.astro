---
interface Props {
  title: string;
  content: string;
}

const { title, content } = Astro.props;
---

<div class="flex max-w-96 flex-col items-center gap-4 text-center">
  <div
    class="border-primary bg-primary flex size-12 items-center justify-center rounded-md border p-3.5 shadow"
  >
    <slot />
  </div>
  <h4 class="text-lg font-semibold">{title}</h4>
  <p class="text-tertiary  max-w-96">{content}</p>
</div>
