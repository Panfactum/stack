---
import CICDIcon from "@/components/icons/cicd.svg";
import CodeIcon from "@/components/icons/code.svg";
import DatabaseIcon from "@/components/icons/database.svg";
import DollarIcon from "@/components/icons/dollar.svg";
import EyeIcon from "@/components/icons/eye.svg";
import FlagIcon from "@/components/icons/flag.svg";
import PowerIcon from "@/components/icons/power.svg";
import QRIcon from "@/components/icons/qr-code.svg";
import ShieldIcon from "@/components/icons/shield.svg";

import FeatureListBlock from "./FeatureListBlock.astro";
import SubSection from "../../../components/astro/layout/SubSection.astro";
---

<SubSection kicker="Features" title="Production-ready from day one">
  <div class="flex flex-col gap-10 sm:grid sm:grid-cols-2 md:grid-cols-3">
    <FeatureListBlock
      title={"Cost Savings"}
      content={"Hyper-optimized to provide the lowest workload costs when running Kubernetes on AWS. Save up to 90% compared to the default EKS setup."}
    >
      <DollarIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"Security"}
      content={"RBAC, zero-trust networking, automatically rotating credentials, audit logging, self-hosted identity provider w/ SSO integrations."}
    >
      <ShieldIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"High Availability"}
      content={"Up to 99.999% uptime attainment with resiliency for datacenter outages. Achieve 99.999999999% data durability."}
    >
      <PowerIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"Databases"}
      content={"Modules for the most popular databases: PostgreSQL, Redis, NATS"}
    >
      <DatabaseIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"DevShell"}
      content={"Purpose-built local environment for managing your cloud infrastructure. Support for Linux, MacOS, and Windows."}
    >
      <CodeIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"CI / CD"}
      content={"Hyper-optimized to provide the lowest workload costs when running Kubernetes on AWS. Save up to 90% compared to the default EKS setup."}
    >
      <CICDIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"Monitoring and Observability"}
      content={"A full self-hosted monitoring suite that includes metrics, logging, tracing, synthetic tests, and alerting."}
    >
      <EyeIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"Infrastructure-as-Code"}
      content={"All your infrastructure, fully codified. Be ready for SOC 2 Type 2, HITRUST, and ISO 27001."}
    >
      <QRIcon />
    </FeatureListBlock>
    <FeatureListBlock
      title={"Open Source"}
      content={"Built exclusively on the most popular open-source tooling and standards. Infinitely extendable with no risk of vendor-lock."}
    >
      <FlagIcon />
    </FeatureListBlock>
  </div>
</SubSection>
