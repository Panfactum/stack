---
import Shield from "./Shield.astro";
import SubSection from "../../../components/astro/layout/SubSection.astro";
import Button from "../../../components/astro/ui/Button.astro";
import CheckIcon from "../../../components/astro/ui/CheckIcon.astro";

const GUARANTEES = [
  "Free savings assessment before contract signing",
  "If we miss the savings target, we pay the difference",
  "45-day, no-questions-asked refunds",
];
---

<SubSection>
  <div
    class="relative flex w-full flex-col items-center justify-center gap-2 rounded-lg bg-gradient-to-r from-brand-700 to-brand-600 p-10 text-center dark:from-brand-800 dark:to-brand-700"
  >
    <img
      src="/hero-pattern.svg"
      alt="Background grid"
      class="absolute left-1/4 top-0 h-full w-1/2"
    />
    <Shield />
    <p class="text-display-lg font-machina font-semibold">
      The Panfactum Guarantee
    </p>

    <p class="text-display-sm mb-8">
      We save you money or our service is free.
    </p>

    <div class="mb-8 flex flex-col gap-4">
      {GUARANTEES.map(item => (
          <div class="text-display-xs grid max-w-[600px] grid-cols-10 gap-4 text-left">
            <div class="col-span-1">
              <CheckIcon />
            </div>
            <div class="col-span-9">
              <p class="">{item}</p>
            </div>
          </div>
        ))}
    </div>
    <a href="/support" class="z-10">
      <Button variant="secondary"> Learn more</Button>
    </a>
  </div>
</SubSection>
