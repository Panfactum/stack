---
import {Picture} from "astro:assets";

import Shield from "./Shield.svg";
import GridPattern from "../../../components/icons/GridPattern.svg"
import Button from "../../../components/ui/Button.astro";
import CheckIcon from "../../../components/ui/CheckIcon.astro";
import SubSection from "../../../layouts/SubSection.astro";


const GUARANTEES = [
  "Free savings assessment before contract signing",
  "If we miss the savings target, we pay the difference",
  "45-day, no-questions-asked refunds",
];
---

<SubSection>
  <div
    class="relative flex w-full flex-col items-center justify-center gap-2 rounded-lg bg-gradient-to-r from-brand-700 to-brand-600 p-10 text-center dark:from-brand-800 dark:to-brand-700"
  >
      <span
        class="absolute left-1/4 top-0 w-1/2"
      >
        <Picture
                src={GridPattern}
                alt="Background grid"
                sizes="(max-width: 24rem) 24rem, (max-width: 40rem) 40rem, 80rem"
                formats={["avif", "webp"]}
                breakpoints={[400, 640, 1280]}
        />
      </span>

      <Picture
              src={Shield}
              alt="Panfactum Guarantee Icon"
              sizes="8rem"
              formats={["avif", "webp"]}
              breakpoints={[128]}
      />
    <p class="text-display-lg font-machina font-semibold">
      The Panfactum Guarantee
    </p>

    <p class="text-display-sm mb-8">
      We save you money or our service is free.
    </p>

    <div class="mb-8 flex flex-col gap-4">
      {GUARANTEES.map(item => (
          <div class="text-display-xs grid max-w-[600px] grid-cols-10 gap-4 text-left">
            <div class="col-span-1">
              <CheckIcon />
            </div>
            <div class="col-span-9">
              <p class="">{item}</p>
            </div>
          </div>
        ))}
    </div>
    <a href="/support" class="z-10">
      <Button variant="secondary"> Learn more</Button>
    </a>
  </div>
</SubSection>
