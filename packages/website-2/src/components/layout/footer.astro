---
import { Button } from '../ui/button'
import { PanfactumLogo } from '../panfactum-logo'
import { faGithub, faDiscord } from '@fortawesome/free-brands-svg-icons'
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome'
import Spacer from '../ui/spacer'
import { COPYWRITE } from '../../lib/constants'
---

<footer
  class="flex flex-col items-center bg-primary text-primary pt-6xl overflow-x-hidden"
>
  <div
    class="container flex flex-col gap-y-6xl px-container-padding-mobile xl:px-container-padding-desktop"
  >
    <Spacer />
    <div class="flex flex-col md:flex-row gap-4xl justify-between">
      <div class="">
        <h2 class="text-lg font-semibold">Join our newsletter</h2>
        <p class="text-tertiary">
          Weâ€™ll send you a nice letter once per week. No spam.
        </p>
      </div>

      <div class="flex flex-1 flex-col md:flex-row gap-4 items-center">
        <div class="hidden md:flex md:basis-3/6"></div>
        <input
          type="email"
          placeholder="Enter your email"
          class="w-full border border-primary shadow-sm bg-primary md:w-auto md:flex-2 basis-2/6 rounded-md px-xl py-lg h-11 md:h-12"
        />
        <Button
          variant={`primary`}
          className="w-full md:w-auto md:flex-2 basis-1/6"
          size="2xl">Subscribe</Button
        >
      </div>
    </div>
    <Spacer />

    <div
      class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4xl"
    >
      <div class="flex flex-col gap-xl min-w-[96px]">
        <h2 class="text-sm font-semibold text-quaternary">Features</h2>
        <div class="flex flex-col gap-lg">
          <a href="#" class="text-md text-tertiary font-semibold">CI / CD</a>
          <a href="#" class="text-md text-tertiary font-semibold"
            >Local Development</a
          >
        </div>
      </div>

      <div class="flex flex-col gap-xl min-w-[96px]">
        <h2 class="text-sm font-semibold text-quaternary">&nbsp;</h2>
        <div class="flex flex-col gap-lg">
          <a href="#" class="text-md text-tertiary font-semibold"
            >Cost Savings</a
          >
          <a href="#" class="text-md text-tertiary font-semibold"
            >Local Development</a
          >
        </div>
      </div>

      <div class="flex flex-col gap-xl min-w-[96px]">
        <h2 class="text-sm font-semibold text-quaternary">Docs</h2>
        <div class="flex flex-col gap-lg">
          <a href="#" class="text-md text-tertiary font-semibold"
            >Getting Started</a
          >
          <a href="#" class="text-md text-tertiary font-semibold"
            >Bootstrapping</a
          >
        </div>
      </div>

      <div class="flex flex-col gap-xl min-w-[96px]">
        <h2 class="text-sm text-quaternary font-semibold">Company</h2>
        <div class="flex flex-col gap-lg">
          <a href="#" class="text-md text-tertiary font-semibold">About</a>
          <a href="#" class="text-md text-tertiary font-semibold">Mission</a>
        </div>
      </div>

      <div class="flex flex-col gap-xl min-w-[96px]">
        <h2 class="text-sm font-semibold text-quaternary">Resources</h2>
        <div class="flex flex-col gap-lg">
          <a href="#" class="text-md text-tertiary font-semibold"
            >Getting Started</a
          >
          <a href="#" class="text-md text-tertiary font-semibold">K8s Cluster</a
          >
        </div>
      </div>

      <div class="flex flex-col gap-xl min-w-[96x]">
        <h2 class="text-sm font-semibold text-quaternary">Legal</h2>
        <div class="flex flex-col gap-lg">
          <a href="#" class="text-md text-tertiary font-semibold">Terms</a>
          <a href="#" class="text-md text-tertiary font-semibold">FAQ</a>
        </div>
      </div>
    </div>

    <div class="flex flex-col sm:flex-row justify-between">
      <div class="flex flex-col gap-4xl">
        <div class="flex flex-col gap-3xl">
          <PanfactumLogo />
          <p class="text-tertiary text-md">
            Cloud native system for platform engineering
          </p>
        </div>
        <div class="flex items-center gap-x-3xl text-quaternary">
          <FontAwesomeIcon icon={faGithub} size={'xl'} />

          <FontAwesomeIcon icon={faDiscord} size={'xl'} />
        </div>
        <p>{COPYWRITE}</p>
      </div>

      <img
        class="hidden lg:block max-w-[490px] self-end translate-x-1/4"
        src="/mascot.png"
        alt="Panfactum Mascot"
      />
    </div>
  </div>
</footer>
