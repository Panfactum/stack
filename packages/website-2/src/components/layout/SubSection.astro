---
import SubSectionKicker from "./SubSectionKicker.astro";
import SubSectionTitle from "./SubSectionTitle.astro";
interface Props {
  class?: string;
  kicker?: string;
  title?: string;
  background?: "primary" | "secondary";
}
const { kicker, title, class: className, background = "primary" } = Astro.props;
---

<section
  class:list={[
    "flex flex-col items-center justify-center py-7xl w-full",
    className,
  ]}
>
  <div class="pb-8 flex flex-col items-center justify-center">
    {
      kicker && (
        <SubSectionKicker background={background}>{kicker}</SubSectionKicker>
      )
    }
    {
      title && (
        <SubSectionTitle background={background}>{title}</SubSectionTitle>
      )
    }
  </div>

  <slot />
</section>
