---
interface Props {
  subtitle: string;
  background?: "primary" | "secondary";
}

const { subtitle, background = "primary" } = Astro.props;
---

<h3
  class:list={[
    "text-lg font-semibold sm:text-xl my-0 px-6 text-center",
    background === "primary" ? "text-primary" : "text-offWhite",
  ]}
>
  {subtitle}
</h3>
