---
import CommonHead from "./CommonHead.astro";
import Footer from "../components/astro/layout/Footer.astro";
import Header from "../components/astro/layout/Header.astro";

interface Props {
  redirect?: string;
  title: string;
  description: string;
  heroClass?: string;
  hasBorder?: boolean;
}
const {
  redirect,
  title,
  description,
  heroClass = "",
  hasBorder = false,
} = Astro.props;
---

<html lang="en">
  <CommonHead title={title} description={description} redirect={redirect}>
    <meta name="generator" content={Astro.generator} />
  </CommonHead>
  <body class="bg-primary w-screen max-w-[100vw] font-inter">
    <div class:list={heroClass}>
      <Header
        transition:persist
        hasBorder={hasBorder}
        background={"transparent"}
      />
      <slot name="hero" />
    </div>
    <slot />
    <Footer />
  </body>
</html>
